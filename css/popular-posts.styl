.popular-posts
  // Section title
  .section-title
    margin 0
    padding-bottom 10px
    border-bottom 1px solid #E3E5E7

.popular-post
  position relative
  padding 20px 10px
  border-bottom 1px solid #E3E5E7

  &:last-child
    border-bottom none

  .image-container
    width 40px
    height 40px
    position absolute
    left 10px
    top 50%
    transform translateY(-50%)

    .entry-thumbnail
      margin 0
      max-width 100%
      max-height 100%
      border-radius 50% !important

  .text-container
    margin-left 55px

    .popular-post-title
      margin 0
      line-height 1.5em

    .popular-post-author
      font-size 14px

      a
      a:hover
        color inherit
