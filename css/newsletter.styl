.newsletter-subscriber
  position relative
  padding 50px 30px
  background-color $bg-color-gray

  .title
    color black
    font-weight: 500;
    font-size: 24px;
    text-align: center;
    line-height 1.5em
    margin 0
    margin-bottom 20px

  .form-control
    width: 100%;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    height: 44px;
    margin-bottom 10px
    background-color white
    border 1px solid #CCCCCC
    border-radius 3px

    &::-webkit-input-placeholder,
    &::-moz-placeholder
      color: #999;

  button
    display block
    text-transform uppercase
    text-align center
    width 100%
    padding-left 0
    padding-right 0

  p
    margin-bottom 0

  .close-btn
    display block
    position absolute
    top 20px
    right 20px
    width 18px
    height 18px
    opacity .8
    background-size 100%
    cursor pointer
    background-image url("data:image/png;base64,");

.hiring-callout
  text-align: center;
  padding: 20px;
